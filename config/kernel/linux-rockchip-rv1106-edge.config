# RV1106 SoC support
CONFIG_ARCH_ROCKCHIP=y
CONFIG_ARCH_RV1106=y
CONFIG_SOC_RV1106=y

# Device tree support
CONFIG_OF=y
CONFIG_DTC=y

# Serial console
CONFIG_SERIAL_8250=y
CONFIG_SERIAL_8250_CONSOLE=y
CONFIG_SERIAL_8250_FIQ=y

# GPIO support
CONFIG_GPIO_SYSFS=y
CONFIG_GPIO_ROCKCHIP=y

# I2C support
CONFIG_I2C=y
CONFIG_I2C_CHARDEV=y
CONFIG_I2C_HELPER_AUTO=y

# SPI support
CONFIG_SPI=y
CONFIG_SPI_MASTER=y
CONFIG_SPI_ROCKCHIP=y

# MMC support
CONFIG_MMC=y
CONFIG_MMC_BLOCK=y
CONFIG_MMC_ROCKCHIP=y

# USB support
CONFIG_USB=y
CONFIG_USB_SUPPORT=y
CONFIG_USB_DWC2=y

# Network support
CONFIG_NETDEVICES=y
CONFIG_ETHERNET=y
CONFIG_ROCKCHIP_GMAC=y

# WiFi support
CONFIG_WLAN=y
CONFIG_CFG80211=y
CONFIG_MAC80211=y

# Bluetooth support
CONFIG_BT=y
CONFIG_BT_HCIBTUSB=y

# Camera support
CONFIG_MEDIA_SUPPORT=y
CONFIG_VIDEO_DEV=y
CONFIG_VIDEO_V4L2=y
CONFIG_ROCKCHIP_CIF=y

# Display support
CONFIG_DRM=y
CONFIG_DRM_ROCKCHIP=y
CONFIG_ROCKCHIP_RGB=y

# Audio support
CONFIG_SND=y
CONFIG_SND_SOC=y
CONFIG_SND_SOC_ROCKCHIP=y

# Power management
CONFIG_PM=y
CONFIG_PM_WAKELOCKS=y
CONFIG_ROCKCHIP_PM_DOMAINS=y

# Thermal management
CONFIG_THERMAL=y
CONFIG_ROCKCHIP_THERMAL=y

# Watchdog
CONFIG_WATCHDOG=y
CONFIG_ROCKCHIP_WATCHDOG=y

# RTC
CONFIG_RTC_CLASS=y
CONFIG_RTC_DRV_ROCKCHIP=y

# Crypto
CONFIG_CRYPTO=y
CONFIG_CRYPTO_ROCKCHIP=y

# NPU support
CONFIG_ROCKCHIP_NPU=y

# Additional edge features
CONFIG_DEBUG_FS=y
CONFIG_KALLSYMS=y
CONFIG_KALLSYMS_ALL=y
CONFIG_DEBUG_KERNEL=y
CONFIG_DEBUG_INFO=y
CONFIG_DEBUG_INFO_DWARF4=y
CONFIG_GDB_SCRIPTS=y
